//--[Функции]--//
// Простая обводка
f_simple_border(color = $clr_blue, opacity = .5)
  border 1px solid rgba(color, opacity)

// Простой полупрозрачный фон
f_simple_bg(color = $clr_blue, opacity = .15)
  background rgba(color, opacity)

// Наружное свечение
f_box_glow(color, type = 'out', outer_dist = 20px,  inner_dist = 15px)
  if type == 'in'
    box-shadow inset 0px 0px inner_dist rgba(color, .5)
  else if type == 'double'
    box-shadow 0px 0px outer_dist rgba(color, 0.5), inset 0px 0px inner_dist rgba(color, .5)
  else
    box-shadow 0px 0px outer_dist rgba(color, 0.5)


// Внешнее свечение
f_glow_in(color)
  box-shadow inset 0px 0px 15px rgba(color, .7)
//--[/Функции]--//


//--[Миксины]--//
// Двойная рамка
m_double_border()
  border 1px solid rgba($clr_blue, .5)
  border-radius $brd_rad
  position: relative
  &::before
    content ''
    display block
    width 100%
    height 100%
    position absolute
    left 0
    top 0
    padding 4px
    border 1px solid rgba($clr_blue, .35)
    border-radius ($brd_rad + 2)
    transform translate(-5px, -5px)
    z-index: -1;
//--[/Миксины]--//

main_button =
  border-radius $brd_rad_small
  text-transform uppercase
  text-align center
  line-height 30px
  margin auto
  transition all .1s linear
  background $clr_orange
  color $clr_white
  text-shadow $glow_yellow
  {b_txt_qu14}
  f_box_glow($clr_red, , 30px)
  user-select none
  cursor pointer
  &:hover
    background $clr_white
    color $clr_orange

  &--disable
    cursor default
    background $clr_grey
    &:hover
      background $clr_grey
      color $clr_white

border-corner =
  position relative
  &:before
    display block
    content ""
    width 7px
    height 7px
    position absolute
    top 0
    left 0
    border-top 1px solid $clr_blue
    border-left 1px solid $clr_blue
  &:after
    display block
    content ""
    width 7px
    height 7px
    position absolute
    top 0
    right 0
    border-top 1px solid $clr_blue
    border-right 1px solid $clr_blue
  & > span
    &:before
      display block
      content ""
      width 7px
      height 7px
      position absolute
      bottom 0
      left 0
      border-bottom 1px solid $clr_blue
      border-left 1px solid $clr_blue
    &:after
      display block
      content ""
      width 7px
      height 7px
      position absolute
      bottom 0
      right 0
      border-bottom 1px solid $clr_blue
      border-right 1px solid $clr_blue
