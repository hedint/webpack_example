/**
  *@--Легенда
  *1. $variable -> переменная, сохранено только значение простого свойства.
      Вставка:
      .class
        property: $variable

  *2. b_variable -> блок, может сохранять блок кода для дальнейшего использования.
      Вставка:
      .class
        {_variable}

  *3. f_variable -> функция, возвращает результат какой-либо операции.
      Вставка:
      .class
        border-color f_get_rgba(#ccc, .3)

  *4. m_variable -> миксин, возвращает блок кода
      Вставка:
      .class
        m_variable()
***/


//--[Цвета]--//
$clr_white     = #ffffff
$clr_black     = #000000
$clr_red       = #ff0100
$clr_red_lite  = #ff4400
$clr_orange    = #ff9c00
$clr_yellow    = #ffe26e
$clr_grey      = #a4a4a4
$clr_blue      = #50fcf5
$clr_blue_dim  = #2eada8
$clr_blue_dark = #08201e
//--[/Цвета]--//


//--[Подсветка текста]--//
$glow_white  = 0 0 12px $clr_white,  0 0 6px $clr_white
$glow_blue   = 0 0 12px $clr_blue,   0 0 6px $clr_blue
$glow_yellow = 0 0 12px $clr_yellow, 0 0 6px $clr_yellow
$glow_orange = 0 0 12px $clr_orange, 0 0 6px $clr_orange
$glow_red    = 0 0 12px $clr_red,    0 0 6px $clr_red
//--[/Подсветка текста]--//


//--[/Скругление]--//
$brd_rad = 5px
$brd_rad_small = 3px
//--[/Скругление]--//


